{
  "$schema": "./schema.json",
  "backend": {
    "host": "127.0.0.1",
    "port": 8010
  },
  "frontend": {
    "port": 5173
  },
  "cors": {
    "allowed_origins": [
      "http://localhost:5173",
      "http://127.0.0.1:5173"
    ]
  },
  "paths": {
    "data_dir": "static_data",
    "temp_upload_dir": "backend/temp_uploads"
  },
  "upload": {
    "max_file_size": 52428800
  },
  "epub": {
    "max_title_length": 32,
    "max_chunk_size": 1024,
    "merge_same_name_chapters": true,
    "merge_consecutive_image_chapters": true
  },
  "tokenizer": {
    "mode": "B"
  },
  "dictionary": {
    "cache_size": 4096,
    "memory_mode": false,
    "load_kanji_dict": false,
    "db_path": null,
    "preferred_languages": ["chn", "eng"],
    "show_all_languages": false
  },
  "llm": {
    "model": "openai/qwen-flash",
    "api_key": "YOUR-API-KEY",
    "base_url": "https://dashscope.aliyuncs.com/compatible-mode/v1",
    "temperature": 0.4,
    "max_target_length": 512,
    "max_context_length": 2048
  },
  "query": {
    "default_limit": 100,
    "max_limit": 500
  },
  "logging": {
    "level": "INFO"
  }
}
